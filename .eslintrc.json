{
	"env": {
		"browser": true,
		"es2021": true
	},
	"extends": [
		"eslint:recommended",
		"plugin:@typescript-eslint/recommended",
		"plugin:@typescript-eslint/recommended-requiring-type-checking"
	],
	"parser": "@typescript-eslint/parser",
	"parserOptions": {
		"ecmaVersion": 12,
		"sourceType": "module",
		"extraFileExtensions": [ ".svelte" ],
		"project": [ "./tsconfig.json" ]
	},
	"plugins": [
		"@typescript-eslint"
	],
	"rules": {
		"indent": [	"error", "tab" ],
		"linebreak-style": 0,
		"quotes": [	"error","double" ],
		"semi": [	"error", "always"	],
		"eol-last": [ "error", "always" ]
	}
}
